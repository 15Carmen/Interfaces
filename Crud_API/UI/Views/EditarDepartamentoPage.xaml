<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:UI.ViewModels"
             x:Class="UI.Views.EditarDepartamentoPage"
             Title="Editar Departamento">
    
    <ContentPage.BindingContext>
        <model:EditarDepartamentoVM/>
    </ContentPage.BindingContext>

    <ScrollView>

        <VerticalStackLayout Spacing="10">


            <HorizontalStackLayout Spacing="10" Padding="10"
                VerticalOptions="Center"
                HorizontalOptions="Center"> 

                <Label Text="Id: "/>
                <Label Text="{Binding Departamento.Id}"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" Padding="10"
                VerticalOptions="Center"
                HorizontalOptions="Center">

                <Label Text="Nombre: "/>
                <Entry Text="{Binding Departamento.Nombre}"  WidthRequest="200"/>
            </HorizontalStackLayout>


            <HorizontalStackLayout HorizontalOptions="Center">
                <Button Text="Cancelar" Command="{Binding CancelarCommand}"/>
                <Button Text="Guardar" Command="{Binding GuardarCommand}"/>

            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>