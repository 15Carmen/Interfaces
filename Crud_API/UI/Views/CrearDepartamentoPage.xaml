<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:UI.ViewModels"
             x:Class="UI.Views.CrearDepartamentoPage"
             Title="Crear Departamento">

    <ContentPage.BindingContext>
        <model:CrearDepartamentoVM/>
    </ContentPage.BindingContext>

    <ScrollView>

        <VerticalStackLayout Spacing="10">

            <HorizontalStackLayout Spacing="10" Padding="10"
                 VerticalOptions="Center"
                 HorizontalOptions="Center">

                <Label Text="Id: "/>
                <Entry Text="{Binding DepartamentoNuevo.Id}"  WidthRequest="200"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" Padding="10"
                            VerticalOptions="Center"
                            HorizontalOptions="Center">

                <Label Text="Nombre: "/>
                <Entry Text="{Binding DepartamentoNuevo.Nombre}"  WidthRequest="200"/>
            </HorizontalStackLayout>

           

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                <Button Text="Cancelar" Command="{Binding CancelarCommand}"/>
                <Button Text="Guardar" Command="{Binding GuardarCommand}"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>