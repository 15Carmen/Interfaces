<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UI.Views">

    <ShellContent
         Title="Listado de Personas"
         ContentTemplate="{DataTemplate local:ListadoPersonasPage}"
         Route="MainPage"/>


    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
       
        <ShellContent Title="Departamentos"  ContentTemplate="{DataTemplate local:ListadoDepartamentosPage}" Route="ListadoDepartamentosPage"/>


        <ShellContent Title="Personas" ContentTemplate="{DataTemplate local:ListadoPersonasPage}" Route="ListadoPersonasPage"/>
      
    </FlyoutItem>

</Shell>
