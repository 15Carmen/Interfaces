<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.MainPage">


    <Grid RowDefinitions="Auto, Auto, Auto, 7*"
          ColumnDefinitions="*, 16*"
          Margin="10"
          Padding="10">

        <Label x:Name="lblUser"
               Grid.Row="0"
               Grid.Column="0"
               Text="User"/>

        <Entry 
                x:Name="ntrUserName"
                Grid.Row="0"
                Grid.Column="1" 
                Placeholder="Nombre de Usuario"
                HorizontalOptions="Start"/>

        <Label 
                x:Name="lblMessage"
                Grid.Row="1"
                Grid.Column="0"
                Text="Message"/>

        <Entry
                x:Name="ntrMessage"
                Grid.Row="1"
                Grid.Column="1"
                Placeholder="Mensaje"
                HorizontalOptions="StartAndExpand"/>

        <Button 
            x:Name="btnSendMessage"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Text="Send"
            HorizontalOptions="Start"
            />

        <ListView
            x:Name="lvChats"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2">
            
            
        </ListView>


    </Grid>

</ContentPage>
