<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">


            <Label
                Text="Hello, World!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Entry
                x:Name="txtNombre"
                Text=""
                WidthRequest="200"
                HeightRequest="20"/>

            <Entry
                x:Name="txtApellidos"
                Text=""
                WidthRequest="200"
                HeightRequest="20"/>

            <Button
                x:Name="btnToTabbedPage"
                Text="Ir a TabbedPage"
                Clicked="btnTabbedPageClick"
                HorizontalOptions="Center" />

            <Button
                x:Name="btnToFourPage"
                Text="Ir a la pagina 4"
                Clicked="btn4PageClick"
                HorizontalOptions="Center" />

            <Button
                x:Name="btnToFivePage"
                Text="Ir a la pagina 5"
                Clicked="btn5PageClick"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
